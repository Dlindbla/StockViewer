                            <NumberAxis label="Date" side="BOTTOM" fx:id="xAxis" />
                          </xAxis>
                          <yAxis>
                            <NumberAxis fx:id="yAxis" label="Price" side="LEFT" tickUnit="10" />
                          </yAxis>
                        </LineChartWithMarkers>
                     </children>
                  </AnchorPane>
               </children>
            </HBox>
         </children>
      </AnchorPane>
   </children>
